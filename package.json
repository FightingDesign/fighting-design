{
  "name": "fighting-design",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs",
    "start"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "pnpm vite",
    "dev:docs": "pnpm run -C docs dev",
    "build": "run-s build:*",
    "build:components": "vite build",
    "build:theme": "vite build --config vite.config.css.ts",
    "build:types": "vite build --config vite.config.types.ts",
    "build:docs": "pnpm run -C docs build",
    "serve:docs": "pnpm run -C docs serve",
    "move": "node build/moveFile.ts",
    "test": "vitest",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@fighting-design/fighting-components": "workspace:*",
    "@fighting-design/fighting-theme": "workspace:*",
    "@fighting-design/fighting-type": "workspace:*",
    "@fighting-design/fighting-utils": "workspace:*",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/test-utils": "^2.0.0-rc.18",
    "happy-dom": "^3.2.2",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "sass": "^1.50.1",
    "typescript": "^4.6.4",
    "vite": "^2.9.5",
    "vitest": "^0.10.0",
    "vue": "^3.2.33",
    "vue-tsc": "^0.34.7"
  },
  "devDependencies": {
    "@vue/tsconfig": "^0.1.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "vite-plugin-dts": "^1.2.0"
  }
}